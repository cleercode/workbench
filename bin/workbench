#!/usr/bin/env node

var workbench = require('../lib/workbench');

/**
 * Execute appropriate command based on command line input.
 */
(function command() {
  var args = process.argv.slice(2)
  , command = args[0]
  , srcPath = args[1] ? args[1] : 'views'
  , destPath = args[2] ? args[2] : 'build';

  switch(command) {
    case 'new': workbench.create(srcPath); break;
    case 'build': workbench.build(srcPath, destPath); break;
    case 'watch': workbench.watch(srcPath, destPath); break;
    default: break;
  }
})();